# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Controller for Dots And Boxes
GET      /                                controllers.HomeController.home
GET      /game                            controllers.HomeController.game
GET      /game/save                       controllers.HomeController.save
GET      /game/load                       controllers.HomeController.load
POST     /game/move/undo                  controllers.HomeController.undo
POST     /game/move/redo                  controllers.HomeController.redo
POST     /game/move/:input                controllers.HomeController.move(input: String)

GET      /dd                              controllers.HomeController.displayGame()

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file                    controllers.Assets.versioned(path="/public", file: Asset)

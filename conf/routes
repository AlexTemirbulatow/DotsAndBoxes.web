# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Controller for Dots And Boxes
GET     /                                controllers.HomeController.about()
GET     /game                            controllers.HomeController.display()
GET     /game/load                       controllers.HomeController.load()
GET     /game/undo                       controllers.HomeController.undo()
GET     /game/redo                       controllers.HomeController.redo()

GET     /game/move/:input                controllers.HomeController.move(input: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
